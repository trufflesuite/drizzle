{
  "name": "drizzle",
  "version": "1.2.5",
  "description": "A reactive data-store for web3 and smart contracts.",
  "main": "dist/drizzle.js",
  "react-native": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/drizzle"
  },
  "scripts": {
    "build": "webpack --config webpack/release.config.js",
    "build:pure": "webpack --config webpack/pure.config.js",
    "dev": "webpack --config webpack/release.config.js --watch",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js' ",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "test": "jest --notify",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "ethereum",
    "redux",
    "redux-saga"
  ],
  "author": {
    "name": "Josh Quintal",
    "email": "josh@trufflesuite.com",
    "url": "http://truffleframework.com/docs/drizzle/getting-started"
  },
  "license": "ISC",
  "dependencies": {
    "deepmerge": "^2.2.1",
    "eth-block-tracker-es5": "^2.3.2",
    "is-plain-object": "^2.0.4",
    "redux": "^4.0.1",
    "redux-saga": "^0.16.2",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-jest": "^22.1.2",
    "ganache-core": "^2.3.3",
    "jest": "^23.6.0",
    "prettier-standard": "^8.0.1",
    "standard": "^12.0.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-merge": "^4.1.4"
  }
}
