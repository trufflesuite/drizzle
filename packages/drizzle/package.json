    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-jest": "^22.4.1",
    "ganache-core": "^2.5.4",
    "jest": "^24.7.1",
    "prettier-standard": "^9.1.1",
